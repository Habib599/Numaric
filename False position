//Program for Bisection Method in C
#include<stdio.h>
double func(double x) {
 return 2*x*x*x -2*x -6;
 }
double e;
double c;
// bisection user defined function 
void bisection(double a, double b)
 {
 if(func(a) * func(b) >= 0)
 { 	printf("Incorrect value of a and b");
 	return;
 }
 int i=1;
 double m=a-func(a)*((b-a)/(func(b)-func(a)));
 printf("\n----------------------------------------------------------------\n");
 printf("step\txo\t f(xo)\t \t x1\t\tf(x1)\t  x2\t f(x2)\t  update\n");
 printf("----------------------------------------------------------------\n");
 while (fabs(func(m)) >= e)
 {
 	 printf("%d ",i);
	 i++;
	 printf("\t%.4lf ",a);
	 printf("\t%.4lf ",func(a));
	 printf("\t%.4lf ",b);
	 printf("\t%.4lf ",func(b));
 
 c =a-func(a)*((b-a)/(func(b)-func(a)));;
 m=c;
 if (func(c) == 0.0)
 { 	printf("\t%.4lf  ",c);
	 printf("\t%.4lf \t", func(c));
	 break;
 }
 else if (func(c)*func(a) < 0)
 {
 	printf("\t%.4lf ",c);
	 printf("\t%.5lf\t\t", func(c));
	 b = c;
	 printf("x1=x2");
 }
 else
 {
 	printf("\t%.4lf ",c);
	 printf("\t%.5lf \t", func(c));
 	a = c;
 	printf("xo=x2");
 }
 	printf("\n");
 }
 	printf("----------------------------------------------------------------\n");
 	printf(" \n After %d steps approximate Root is = %.5lf\n",i-1,c);
 }
int main()
{
 	double a,b,i,n,fa,fb,fc;
 	printf("Used function: 2x^3 - 2x -6\n");
	 printf("Enter n to count x: ");
	 scanf("%lf",&n);
	 printf("\nx\tf(x)");
	 for(i=0;i<=n;i++)
	 {
	 	printf("\n%.0f\t%f",i,func(i));
	 }
   	 printf("\n\nEnter value for xo: ");
   	 scanf("%lf",&a);
   	 printf("\nEnter value for x1: ");
  	 scanf("%lf",&b);
  	 fa=func(a);
 	 fb=func(b);
   	 printf("\n\nf(xo)= %lf\tf(x1)= %lf\n\n",fa,fb);
	 printf("Enter accurcy:  ");
	 scanf("%lf",&e);
 	 bisection(a,b); // Calling bisection method
}
